<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEq"
        style="@style/EqualButtons"
        android:layout_width="90dp"
        android:text="="
        android:textSize="41sp"
        android:layout_height="140dp"
        android:background="@drawable/eq_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPt"
        style="@style/NumbersButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/num_round"
        android:text="."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnEq" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnZr"
        style="@style/NumbersButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/num_round"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPt" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPerCe"
        style="@style/NumbersButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/num_round"
        android:text="%"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnZr" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn1"
        style="@style/NumbersButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/num_round"
        android:text="1"

        app:layout_constraintBottom_toTopOf="@+id/btnPerCe"
        app:layout_constraintEnd_toStartOf="@+id/btn2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn2"
        style="@style/NumbersButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/num_round"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/btnZr"
        app:layout_constraintEnd_toStartOf="@+id/btn3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn3"
        style="@style/NumbersButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/num_round"
        android:text="3"

        app:layout_constraintBottom_toTopOf="@+id/btnPt"
        app:layout_constraintEnd_toStartOf="@+id/btnEq" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn4"
        style="@style/NumbersButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/num_round"
        android:text="4"

        app:layout_constraintBottom_toTopOf="@+id/btn1"
        app:layout_constraintEnd_toStartOf="@+id/btn5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn5"
        style="@style/NumbersButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/num_round"
        android:text="5"

        app:layout_constraintBottom_toTopOf="@+id/btn2"
        app:layout_constraintEnd_toStartOf="@+id/btn6" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn6"
        style="@style/NumbersButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/num_round"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/btn3"
        app:layout_constraintEnd_toStartOf="@+id/btnAdd" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn7"
        style="@style/NumbersButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/num_round"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/btn4"
        app:layout_constraintEnd_toStartOf="@+id/btn8" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn8"
        style="@style/NumbersButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/num_round"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/btn5"
        app:layout_constraintEnd_toStartOf="@+id/btn9" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn9"
        style="@style/NumbersButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/num_round"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/btn6"
        app:layout_constraintEnd_toStartOf="@+id/btnMin" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAdd"
        style="@style/FunctionButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/function_round"
        android:text="+"
        android:fontFamily="sans-serif-light"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/btnEq"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMin"
        style="@style/FunctionButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/function_round"
        android:text="-"
        android:fontFamily="sans-serif-light"
        android:textSize="58sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAdd"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDelete"
        style="@style/FunctionButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/function_round"
        android:text="⌫"

        app:layout_constraintBottom_toTopOf="@+id/btnMin"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMul"
        style="@style/FunctionButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/function_round"
        android:text="×"
        android:fontFamily="sans-serif-light"
        android:textSize="38sp"
        app:layout_constraintBottom_toTopOf="@+id/btn9"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDiv"
        style="@style/FunctionButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/function_round"
        android:text="÷"
        android:fontFamily="sans-serif-light"
        android:textSize="38dp"

        app:layout_constraintBottom_toTopOf="@+id/btn8"
        app:layout_constraintEnd_toStartOf="@+id/btnMul" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnClear"
        style="@style/FunctionButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/function_round"
        android:textSize="24sp"
        android:text="C"
        android:fontFamily="sans-serif"
        app:layout_constraintBottom_toTopOf="@+id/btn7"
        app:layout_constraintEnd_toStartOf="@+id/btnDiv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSin"
      style="@style/FunctionButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/function_round"
        android:text="sin"
        android:textColor="@color/sinButtonTXT"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/btnMul"
        app:layout_constraintEnd_toStartOf="@+id/btnCos" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCos"
        android:textColor="@color/sinButtonTXT"
        android:textSize="14sp"
        style="@style/FunctionButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/function_round"
        android:text="cos"

        app:layout_constraintBottom_toTopOf="@+id/btnDelete"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBrace1"
        style="@style/FunctionButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/function_round"
        android:text=")"
        android:textSize="17sp"
        android:textColor="@color/sinButtonTXT"
        app:layout_constraintBottom_toTopOf="@+id/btnDiv"
        app:layout_constraintEnd_toStartOf="@+id/btnSin" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBrace2"
        style="@style/FunctionButtons"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/function_round"
        android:textColor="@color/sinButtonTXT"
        android:text="("
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/btnClear"
        app:layout_constraintEnd_toStartOf="@+id/btnBrace1" />

    <EditText
        android:id="@+id/inputNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="10dp"
        android:gravity="end|left"
        android:clickable="false"
        android:focusable="true"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:cursorVisible="true"
        android:verticalScrollbarPosition="right"
        android:text=""
        android:background="@android:color/transparent"
        android:textAlignment="viewEnd"
        android:textColor="@color/inputColor"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/output"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:ellipsize="end"
        android:focusable="false"
        android:text=""
        android:textAlignment="viewEnd"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputNumber"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>